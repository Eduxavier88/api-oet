# ============================================
# API OET - Configurações de Ambiente
# ============================================

# Porta da aplicação
PORT=3000

# CORS - Origins permitidos (separados por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# OET Integration (Sistema de Chamados)
# ============================================

# WSDL URL da OET
OET_WSDL_URL=https://oet-dev.intrared.net:8083/ap/interf/app/spg_new/spg.php?wsdl

# Credenciais OET (fornecidas pelo cliente)
OET_USER=your_oet_username
OET_PASSWORD=your_oet_password

# Modo de teste (apenas desenvolvimento)
# IMPORTANTE: Sempre false em produção!
OET_TEST_MODE=false

# ============================================
# Logging
# ============================================

# Nível de log (error, warn, log, debug, verbose)
LOG_LEVEL=log

# ============================================
# Desenvolvimento
# ============================================

# Ambiente de execução
NODE_ENV=development
